<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="AmberolSongDetails" parent="GtkWidget">
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">12</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="valign">center</property>
            <property name="margin-start">6</property>
            <property name="margin-end">6</property>
            <child>
              <object class="AmberolMarquee" id="song_title_label">
                <property name="width-chars">20</property>
                <style>
                  <class name="song-title"/>
                </style>
              </object>
            </child>
            <child>
              <object class="AmberolMarquee" id="song_artist_label">
                <property name="width-chars">25</property>
                <style>
                  <class name="song-artist"/>
                </style>
              </object>
            </child>
            <child>
              <object class="AmberolMarquee" id="song_album_label">
                <property name="width-chars">25</property>
                <style>
                  <class name="song-album"/>
                </style>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
