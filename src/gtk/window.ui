<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="AmberolWindow" parent="AdwApplicationWindow">
    <property name="handle-menubar-accel">true</property>
    <property name="width-request">360</property>
    <property name="height-request">660</property>
    <property name="default-width">800</property>
    <property name="content">
      <object class="GtkWindowHandle">
        <child>
          <object class="DragOverlay" id="drag_overlay">
            <property name="title" translatable="yes">Drop a song to add it to the playlist</property>
            <property name="child">

              <object class="AdwToastOverlay" id="toast_overlay">
                <property name="child">

                  <object class="GtkStack" id="main_stack">
                    <property name="transition-type">crossfade</property>
                    <child>
                      <object class="GtkStackPage">
                        <property name="name">initial-view</property>
                        <property name="child">
                          <object class="AdwToolbarView">

                            <child type="top">
                              <object class="AdwHeaderBar">
                                <property name="show-title">false</property>
                              </object>
                            </child>

                            <property name="content">
                              <object class="AdwClamp">
                                <property name="maximum-size">450</property>
                                <property name="vexpand">true</property>
                                <property name="valign">fill</property>
                                <property name="child">
                                  <object class="AdwStatusPage" id="status_page">
                                    <property name="margin-start">12</property>
                                    <property name="margin-end">12</property>
                                    <property name="title">Amberol</property>
                                    <property name="description" translatable="yes">Select a file or a folder, or drag files from your file manager to the application window to add songs to the playlist</property>
                                    <property name="child">
                                      <object class="GtkBox">
                                        <property name="orientation">vertical</property>
                                        <property name="halign">center</property>
                                        <property name="homogeneous">true</property>
                                        <property name="spacing">12</property>
                                        <child>
                                          <object class="GtkButton" id="restore_playlist_button">
                                            <property name="label" translatable="yes">Restore Playlist</property>
                                            <property name="action-name">queue.restore-playlist</property>
                                            <style>
                                              <class name="suggested-action"/>
                                              <class name="pill"/>
                                            </style>
                                          </object>
                                        </child>
                                        <child>
                                          <object class="GtkButton" id="add_folder_button">
                                            <property name="label" translatable="yes">Add Folder</property>
                                            <property name="action-name">queue.add-folder</property>
                                            <style>
                                              <class name="pill"/>
                                            </style>
                                          </object>
                                        </child>
                                        <child>
                                          <object class="GtkButton">
                                            <property name="label" translatable="yes">Add Song</property>
                                            <property name="action-name">queue.add-song</property>
                                            <style>
                                              <class name="pill"/>
                                            </style>
                                          </object>
                                        </child>
                                      </object>
                                    </property>
                                  </object>
                                </property>
                              </object>
                            </property>

                          </object>
                        </property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkStackPage">
                        <property name="name">main-view</property>
                        <property name="child">
                          <object class="AdwOverlaySplitView" id="split_view">
                            <property name="max-sidebar-width">330</property>
                            <property name="sidebar-width-fraction">0.4</property>

                            <property name="content">
                              <object class="AdwToolbarView">

                                <!-- Header Bar -->
                                <child type="top">
                                  <object class="AdwHeaderBar">
                                    <property name="show-title">false</property>
                                  </object>
                                </child>

                                <property name="content">
                                  <object class="GtkBox" id="main_box">
                                    <property name="orientation">vertical</property>
                                    <property name="valign">center</property>
                                    <property name="vexpand">true</property>
                                    <property name="spacing">6</property>
                                    <style>
                                      <class name="main-box"/>
                                    </style>

                                    <!-- Song cover -->
                                    <child>
                                      <object class="AmberolSongCover" id="song_cover">
                                      </object>
                                    </child>

                                    <!-- Song position -->
                                    <child>
                                      <object class="GtkBox">
                                        <property name="orientation">vertical</property>
                                        <property name="spacing">2</property>
                                        <property name="width-request">256</property>
                                        <child>
                                          <object class="GtkBox">
                                            <property name="halign">center</property>
                                            <child>
                                              <object class="AmberolWaveformView" id="waveform_view">
                                                <property name="can-focus">true</property>
                                              </object>
                                            </child>
                                          </object>
                                        </child>
                                        <child>
                                          <object class="GtkCenterBox">
                                            <property name="orientation">horizontal</property>
                                            <property name="width-request">256</property>
                                            <property name="halign">center</property>
                                            <child type="start">
                                              <object class="GtkLabel" id="elapsed_label">
                                                <property name="label">0:00</property>
                                                <accessibility>
                                                  <property name="label" translatable="yes" context="a11y">Elapsed time</property>
                                                </accessibility>
                                                <style>
                                                  <class name="caption"/>
                                                  <class name="numeric"/>
                                                </style>
                                              </object>
                                            </child>
                                            <child type="end">
                                              <object class="GtkLabel" id="remaining_label">
                                                <property name="label">0:00</property>
                                                <accessibility>
                                                  <property name="label" translatable="yes" context="a11y">Remaining time</property>
                                                </accessibility>
                                                <style>
                                                  <class name="caption"/>
                                                  <class name="numeric"/>
                                                </style>
                                              </object>
                                            </child>
                                          </object>
                                        </child>
                                      </object>
                                    </child>

                                    <!-- Song details -->
                                    <child>
                                      <object class="AmberolSongDetails" id="song_details"/>
                                    </child>

                                    <!-- Playback and queue controls -->
                                    <child>
                                      <object class="AmberolPlaybackControl" id="playback_control">
                                        <property name="halign">center</property>
                                        <property name="margin-top">0</property>
                                        <property name="margin-bottom">24</property>
                                      </object>
                                    </child>
                                  </object>

                                </property>
                              </object>
                            </property>

                            <!-- Playlist view -->
                            <property name="sidebar">
                              <object class="AmberolPlaylistView" id="playlist_view"/>
                            </property>
                          </object>
                        </property>
                      </object>
                    </child>
                  </object>

                </property>
              </object>
            </property>
          </object>
        </child>
      </object>
    </property>
    <child>
      <object class="AdwBreakpoint">
        <condition>max-width: 560sp</condition>
        <setter object="split_view" property="collapsed">True</setter>
      </object>
    </child>
  </template>
</interface>
